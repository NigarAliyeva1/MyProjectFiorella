@model List<Category>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between">
                    <h4 class="card-title">Categories</h4>
                    <a class="btn btn-primary text-white mx-2 btn-rounded" asp-action="Create">Create</a>
                </div>
                <div class="table-responsive pt-3">
                    <table id="myCategories" class="table table-bordered">
                        <thead>
                            <tr>
                               
                                <th>
                                    Name
                                </th>
                                <th>
                                    Status
                                </th>
                                
                                <th class="text-right">
                                    Action
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Category cat in Model)
                            {
                                <tr>
                                    <td>
                                        @cat.Name
                                    </td>
                                    <td>
                                        @if (cat.IsDeactive)
                                        {
                                            <span class="text-danger">Passive</span>
                                        }
                                        else
                                        {
                                            <span class="text-success">Active</span>

                                        }
                                    </td>
                                    
                                    <td>
                                        <div class="d-flex justify-content-end">
                                            <a asp-action="Detail" asp-route-id="@cat.Id" style="width:120px" class="btn btn-outline-warning mx-2 btn-rounded">Detail</a>
                                            <a asp-action="Update" asp-route-id="@cat.Id" style="width:120px" class="btn btn-outline-info mx-2 btn-rounded">Update</a>
                                            @if (cat.IsDeactive)
                                            {
                                                <a asp-action="Activity" asp-route-id="@cat.Id" style="width:120px" class="btn btn-outline-success mx-2 btn-rounded">Activate</a>
                                            }
                                            else
                                            {
                                                <a asp-action="Activity" asp-route-id="@cat.Id" style="width:120px" class="btn btn-outline-danger mx-2 btn-rounded">Deactivate</a>
                                            }
                                        </div>
                                    </td>

                                </tr>
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function () {
            $('#myCategories').DataTable();
        });
    </script>
}